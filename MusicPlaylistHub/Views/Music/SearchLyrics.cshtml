@{
    ViewData["Title"] = "Search Song Lyrics";
}

<h2>Search Song Lyrics (lyrics.ovh)</h2>

<form asp-action="SearchLyrics" method="post">
    
    <br /><br />

    <div class="form-group">
        <label for="artist">Artist</label>
        <input type="text" class="form-control" id="artist" name="artist" required />
    </div>

    <br />

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" required />
    </div>

    <br /><br />

    <button type="submit" class="btn btn-primary">Search Lyrics</button>
</form>

<br /><br />

@if (ViewBag.Lyrics != null)
{
    <h3>Lyrics:</h3>
    <pre>@ViewBag.Lyrics</pre>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
